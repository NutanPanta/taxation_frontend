{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "paths":{
            "@assets/*": ["./src/assets/*"],
            "@components/*": ["./src/components/*"],
            "@contexts/*": ["./src/contexts/*"],
            "@features/*": ["./src/features/*"],
            "@guards/*": ["./src/guards/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@pages/*": ["./src/pages/*"],
            "@utils/*": ["./src/utils/*"],
            "@/*": ["./src/*"],
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
